<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taek_aaa.goalsnowball">

    <application
        android:allowBackup="true"
        android:icon="@drawable/goal"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".activity.TodayGoalDoingActivity" />
        <activity android:name=".activity.WeekGoalDoingActivity"/>
        <activity android:name=".activity.MonthGoalDoingActivity"/>
        <activity android:name=".activity.TodayAchievementRateActivity"/>
    </application>

</manifest>