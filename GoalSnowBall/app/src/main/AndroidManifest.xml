<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taek_aaa.goalsnowball">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <service
        android:name=".NotificationService"
        android:enabled="true" />

    <receiver android:name=".NotificationReceiver" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/goal"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.TodayGoalDoingActivity" />
        <activity android:name=".activity.WeekGoalDoingActivity" />
        <activity android:name=".activity.MonthGoalDoingActivity" />
        <activity android:name=".activity.TodayAchievementRateActivity" />
        <activity android:name=".activity.WeekAchievementRateActivity" />
        <activity android:name=".activity.MonthAchievementRateActivity" />
        <activity android:name=".activity.SettingActivity"/>

        <service
            android:name=".Service.NotificationService"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".Service.BroadcastD$BroadcastD" />

        <service
            android:name=".Service.CurrentTimeService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>