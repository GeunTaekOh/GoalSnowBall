<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/side_nav_bar"
            android:textColor="#F5F5F5"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E5E4E2" />



        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            >

            <RadioButton
                android:id="@+id/amountOfPhysical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="개수"
                />

            <RadioButton
                android:id="@+id/amountOfTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="시간" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/setting_amount"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="양"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="10"
                />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="분"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/hiddenEt"
                android:visibility="gone"
                android:maxLength="2"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:entries="@array/unit">
            </Spinner>


        </LinearLayout>

        <EditText
            android:id="@+id/DialogEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:hint="목표를 입력하세요."
            android:inputType="textAutoComplete"
            android:maxLength="17"
            android:singleLine="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/DialogX"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:id="@+id/lastLL"
            android:baselineAligned="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베팅할 금액 : "
                android:layout_gravity="center"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="배팅금"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/bettingGold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <Button
                android:id="@+id/DialogExitButton"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:background="@drawable/roundbutton"
                android:text="취소"
                android:textColor="#F5F5F5"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/DialogConfirmButton"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundbutton"
                android:text="저장"
                android:textColor="#F5F5F5"
                android:textSize="15dp"
                />




        </LinearLayout>



    </LinearLayout>

    <ImageButton
        android:id="@+id/DialogX"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="@+id/linearLayout2"
        android:background="@drawable/close"
        android:padding="10dp" />


</RelativeLayout>