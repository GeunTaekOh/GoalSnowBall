<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="485dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialogTimePickerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/largeLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:background="@drawable/side_nav_bar"
                android:gravity="center"
                android:text="알림을 받을 시간을 설정하세요."
                android:textColor="#F5F5F5"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/dialogPickerX"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/close" />


    <RelativeLayout
        android:id="@+id/dialogTimePickerPicker"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/dialogTimePickerTitle">


        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timePicker"

            >


        </TimePicker>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogTimePickerPicker"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/DialogPickerCancelButton"
                android:layout_width="100dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/roundbutton"
                android:text="취소"
                android:textColor="#F5F5F5"
                android:textSize="15dp" />

            <Button
                android:id="@+id/DialogPickerConfirmButton"
                android:layout_width="100dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/roundbutton"
                android:text="저장"
                android:textColor="#F5F5F5"
                android:textSize="15dp" />


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>